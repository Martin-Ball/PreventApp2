<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context=".View.ui.list.ListFragment">

    <LinearLayout
        android:id="@+id/linearLayoutNewCompany"
        android:layout_width="294dp"
        android:layout_height="102dp"
        android:background="@drawable/shape"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_truck" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Crear nuevo proveedor"
                android:textSize="16sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/new_company"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/linkiar_signin"
            android:drawableLeft="@drawable/ic_add"
            android:drawableTint="@color/white"
            android:elevation="10dp"
            android:text="NUEVO PROVEEDOR"
            app:cornerRadius="20dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <FrameLayout
        android:id="@+id/fragmentContainerAddFiles"
        android:layout_width="match_parent"
        android:layout_height="500dp">

    </FrameLayout>


</LinearLayout>